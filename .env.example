# Banco de dados (usado quando REPOSITORY=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mechanic_saas
DB_USER=root
DB_PASS=

# Persistência de clientes: mysql | json
REPOSITORY=mysql

# Armazenamento JSON (usado quando REPOSITORY=json)
STORAGE_PATH=storage

# Token simples para autenticação (em produção use JWT ou similar)
AUTH_SECRET=change-me-in-production

# CORS – origens permitidas separadas por vírgula (vazio = localhost:3000/3001)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

